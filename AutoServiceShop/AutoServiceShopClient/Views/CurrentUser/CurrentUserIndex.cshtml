@model AutoServiceShopClient.Data.Entity.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('div.hidden').fadeIn(1500).removeClass('hidden');
        });
    </script>
    <meta name="viewport" content="width=device-width" />
    <title>User</title>
    <style>
        div.hidden {
            display: none
        }

        .container {
            height: 400px;
            width: 200px;
            position: relative;
            border: 3px solid #007AFF;
            display: flex;
            align-items: center;
            margin-top: 15%;
        }

        .center {
            margin: 0;
            position: absolute;
            top: 30%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }

        .button-center {
            margin: 0;
            position: absolute;
            top: 75%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }

        .field-validation-error {
            color: red;
        }

        body {
            background-image: url('https://cdn3.f-cdn.com/contestentries/1476645/14106457/5c7905a19aaa6_thumb900.jpg');
            background-size: cover;
            background-attachment: fixed;
        }
    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="hidden center container rounded p-3 mb-2 bg-primary text-white">
        <p class="text-center display-4 font-weight-bold">This is Your User managment panel</p>
        <table style="font-family: Arial, Helvetica, sans-serif; margin-left:auto;margin-right:auto;">
            <tr>
                <td style="width: 33%;"></td>
                <td style="width: 33%;"></td>
                <td style="width: 33%;"></td>
            </tr>
            <tr>
                <td></td>
                <td class="text-center font-weight-bold">@Html.LabelFor(model => model.Username):  @Html.ValueFor(model => model.Username)</td>
                <td></td>
            </tr>
            <tr></tr>
            <tr></tr>
            <tr>
                <td>
                    @using (Html.BeginForm("DeleteIndex", "CurrentUser"))
                    {
                        <button type="submit" class="btn btn-primary btn-outline-primary btn-rounded btn-lg btn-block">Delete my Account</button>
                    }
                </td>
                <td>
                    @using (Html.BeginForm("UpdateIndex", "CurrentUser"))
                    {
                        <button type="submit" class="btn btn-primary btn-outline-primary btn-rounded btn-lg btn-block">Update My Account</button>
                        <input type="hidden" name="UserId" value="@ViewBag.UserId" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("Index", "Home"))
                    {
                        <button type="submit" class="btn btn-primary btn-outline-primary btn-rounded btn-lg btn-block">Home</button>
                    }
                </td>
            </tr>
        </table>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </div>
</body>
</html>
